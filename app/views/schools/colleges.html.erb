<%- title "Data Science Colleges" %>
<div class="row">
  <div class="col-md-12">
    <h1 class="page-header">Colleges and Universities with Data Science Degrees</h1>
    
    <p>
      Download:
      <%= link_to "CSV", colleges_path(format: "csv") %> |
      <%= link_to "JSON", colleges_path(format: "json") %>
    </p>
    <table id="colleges_table" class='table table-striped table-hover'>
      <thead>
        <tr><th>College(Program)</th><th>Degree</th><th>Country</th><th>State(if USA)</th><th>Location</th><th>Department</th> </tr>
      </thead>
      <tbody>
      <% @schools.each do |school| %>
        <tr>
          <td><%= school.name %> (<%= link_to school.program, school.url, title:school.name+' '+school.degree+' in '+school.program, target:'_new'  %>)</td>
          <td> <%= school.degree %></td>
          <td> <%= school.country %></td>
          <td> <%= school.state %></td>
          <td> <% if school.online %>online<% end %> <% if school.online && school.oncampus %> / <% end %> <% if school.oncampus %>on-campus<% end %> </td>
          <td> <%= school.department %></td>
        </tr>
      <% end %>
      </tbody>
    </table>


    <script>
      $(document).ready( function () {
        $('#colleges_table').DataTable({
            "paging":   false,
            "order": [[2, "desc"], [3,"asc"], [0,"asc"]]
        } );
    } );
    </script>
</div>
</div>
