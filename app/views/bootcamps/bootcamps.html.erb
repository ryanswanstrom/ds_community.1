<%- title "Data Science Bootcamps" %>
<div class="row">
  <div class="col-md-12">
    <h1 class="page-header">Data Science Bootcamps</h1>
    <p>
      This list contains data science learning programs that are not associated with a traditional college or university.
    </p>
    <p>
      Download:
      <%= link_to "CSV", bootcamps_path(format: "csv") %> |
      <%= link_to "JSON", bootcamps_path(format: "json") %>
    </p>
    <table id="bootcamps_table" class='table table-striped table-hover'>
      <thead>
        <tr>
          <th>Bootcamp(Program)</th>
          <th>Country</th>
          <th>State(if USA)</th>
          <th>Online</th>
          <th>Price($)</th>
          <th>Comments</th>  
        </tr>
      </thead>
      <tbody>
      <% @bootcamps.each do |bootcamp| %>
        <tr>
          <td><%= bootcamp.name %> (<%= link_to bootcamp.program, bootcamp.url, title:bootcamp.program + ' via ' + bootcamp.name, target:'_new'  %>)</td>
          <td> <%= bootcamp.country %></td>
          <td> <%= bootcamp.state %></td>
          <td> <% if bootcamp.online %>yes<% else %>no<% end %></td>
          <td> <%= bootcamp.price %></td>
          <td> <%= bootcamp.txt %></td>
        </tr>
      <% end %>
      </tbody>
    </table>


    <script>
      $(document).ready( function () {
        $('#bootcamps_table').DataTable({
            "paging":   false,
            "order": [[0, "asc"] ]
        } );
    } );
    </script>
</div>
</div>
