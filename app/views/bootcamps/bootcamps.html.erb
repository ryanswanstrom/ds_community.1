<div class="row">
  <div class="col-md-12">
    <h1>Data Science Bootcamps</h1>
    <p>
      <div class="pw-widget pw-counter-horizontal">
        <a class="pw-button-facebook pw-look-native"></a>
        <a class="pw-button-twitter pw-look-native"></a>
        <a class="pw-button-linkedin pw-look-native"></a>
        <a class="pw-button-post-share"></a>		
      </div>
      <script src="" type="text/<%='http://i.po.st/static/v3/post-widget.js#publisherKey=' + (Rails.env.production? ? ENV['POST_KEY'] : 'abc') + '&retina=true' %>javascript"></script>
    </p>
    <p>
      Download:
      <%= link_to "CSV", colleges_path(format: "csv") %> |
      <%= link_to "JSON", colleges_path(format: "json") %>
    </p>
    <table id="bootcamps_table" class='table table-striped table-hover'>
      <thead>
        <tr>
          <th>Bootcamp(Program)</th>
          <th>Country</th>
          <th>State(if USA)</th>
          <th>Online</th>
          <th>Price($)</th>
          <th>Comments</th>  
        </tr>
      </thead>
      <tbody>
      <% @bootcamps.each do |bootcamp| %>
        <tr>
          <td><%= bootcamp.name %> (<%= link_to bootcamp.program, bootcamp.url, title:bootcamp.program + ' via ' + bootcamp.name, target:'_new'  %>)</td>
          <td> <%= bootcamp.country %></td>
          <td> <%= bootcamp.state %></td>
          <td> <% if bootcamp.online %>yes<% else %>no<% end %></td>
          <td> <%= bootcamp.price %></td>
          <td> <%= bootcamp.txt %></td>
        </tr>
      <% end %>
      </tbody>
    </table>


    <script>
      $(document).ready( function () {
        $('#bootcamps_table').DataTable({
            "paging":   false,
            "order": [[0, "asc"] ]
        } );
    } );
    </script>
</div>
</div>
